{
    "extends": "airbnb-base",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true
    },
    "rules": {

        // Allow strings to exceed max line length
        "max-len": ["error", 150, {
            "ignoreComments": true,
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true
        }],

        // Indent with 4 spaces (also switch statements)
        "indent": ["error", 4, { "SwitchCase": 1 }],

        // Allow windows line spacing
        "linebreak-style": 0,

        // Allow underscore for ID
        "no-underscore-dangle": ["error", { "allow": ["_id", "_json", "_frameId"] }],

        // Allow tabs
        "no-tabs": 0,

        // Disable comma dangle
        "comma-dangle": ["error", "never"],

        // Allow console logs
        "no-console": "off",

        // Allow reassignment of function parameters
        "no-param-reassign": 0,

        // Allow devDependencies (webpack)
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],

        // Allow destructuring of objects on same line
        "object-curly-newline": 0
    }
}
